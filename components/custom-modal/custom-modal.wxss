/* components/custom-modal.wxss */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-content {
  width: 80%;
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
}
.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
}
.modal-body {
  padding: 32rpx;
}
.modal-footer {
  display: flex;
  padding: 15rpx 0;
  border-top: 1rpx solid #eee;
}
.modal-footer button {
  flex: 1;
  border: none;
  border-radius: 0;
  background: none;
}
.btn-cancel {
  border-right: 1px solid #eee !important;
  color: #666666;
}
.btn-confirm {
  color: hsl(18, 100%, 48%);
}